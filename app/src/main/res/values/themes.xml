<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TipCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0047aa</item>
        <item name="colorPrimaryVariant">#ffffff</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/BaseTextViewStyle</item>
    </style>

    <style name="BaseTextViewStyle">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/cobalt</item>
    </style>

    <!-- labels -->
    <style name="DavidsWordThingStyle" parent="BaseTextViewStyle">
        <item name="android:textSize">@dimen/label_size</item>
        <item name="android:textColor">#0047aa</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewButtonStyle">
        <item name="backgroundTint">@color/teal_700</item>
    </style>
</resources>